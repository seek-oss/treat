{
  "packages": [
    "packages/*"
  ],
  "version": "1.4.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": [
    "**/tests/**",
    "**/*.test.{js,ts,tsx}",
    "**/*.md"
  ],
  "command": {
    "version": {
      "allowBranch": "master",
      "message": "chore(release): Publish %s"
    }
  }
}
